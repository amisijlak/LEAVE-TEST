@{
    ViewData["Title"] = "Home";
    ViewData["IsHomePage"] = true;
}

@Html.RenderErrorMessageControl()

<style>
    .row ul>li{
        margin-bottom:20px;
    }
</style>

<div class="row">
    <div class="col-sm-6" style="border-right:2px solid orange">
        <img src="~/images/index.jpg" width="100%" class="img-thumbnail" />
    </div>
    <div class="col-sm-6">
        <h3 style="color:#6C0009">@ViewData["Title"]</h3>
        <hr style="background-color:#6C0009"/>
        <div style="font-size: 16px; text-align: justify;">
            <div style="margin-bottom:20px">Welcome to the Leave Management System, a one stop center for all;</div>
            
            <span>Please use the links at the top to navigate through the system.</span>
        </div>
    </div>
</div>

@section Scripts{ 
    <script type="text/javascript">
        $(function () {
            app.controls.MENU_TO_ACTIVATE = "menu-dashboard";
        });
    </script>
}